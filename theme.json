{
  "name": "AdoPiSoft Default Theme",
  "version": "1.0.0",
  "fields": [
    {
      "field_group_id": "page_properties",
      "legend": "Page Properties",
      "fields": [
        {
          "field_id": "favicon",
          "label": "Favicon Image",
          "type": "image",
          "required": true,
          "defaultValue": "favicon.ico"
        },
        {
          "field_id": "page_title",
          "label": "Page Title",
          "type": "text",
          "defaultValue": "AdoPiSoft WiFi Hostspot"
        },
        {
          "field_id": "banner_text",
          "label": "Banner Text",
          "type": "text",
          "defaultValue": "Affordable Internet Connectivity"
        },
        {
          "field_id": "redirect_to",
          "label": "Redirect To",
          "type": "text",
          "defaultValue": "https://www.adopisoft.com/cp"
        },
        {
          "field_id": "footer_html",
          "label": "Footer HTML",
          "type": "textarea",
          "rows": 5,
          "defaultValue": "Powered By <b><a href=\"//www.adopisoft.com\">AdoPiSoft</a>"
        },
        {
          "field_id": "background_image",
          "label": "Background Image",
          "type": "image",
          "required": false,
          "defaultValue": null
        },
        {
          "field_id": "submit",
          "type": "submit"
        }
      ]
    },
    {
      "field_group_id": "buttons",
      "legend": "Buttons",
      "fields": [
        {
          "field_id": "button_insert_coin",
          "label": "Show Insert Coin Button",
          "type": "checkbox",
          "defaultValue": true
        },
        {
          "field_id": "button_buy_voucher",
          "label": "Show Buy Voucher Button",
          "type": "checkbox",
          "defaultValue": true
        },
        {
          "field_id": "button_view_vouchers",
          "label": "Show View Vouchers Button",
          "type": "checkbox",
          "defaultValue": true
        },
        {
          "field_id": "button_view_rates",
          "label": "Show View Rates Button",
          "type": "checkbox",
          "defaultValue": true
        },
        {
          "field_id": "submit",
          "type": "submit"
        }
      ]
    },
    {
      "field_group_id": "wifi_icons",
      "legend": "WiFi Icons",
      "fields": [
        {
          "field_id": "wifi_connected_icon",
          "label": "Connected Icon",
          "type": "image",
          "required": true,
          "defaultValue": "images/wifi-connected.png"
        },
        {
          "field_id": "wifi_disconnected_icon",
          "label": "Disconnected Icon",
          "type": "image",
          "required": true,
          "defaultValue": "images/wifi-disconnected.png"
        }
      ]
    },
    {
      "field_group_id": "banners",
      "legend": "Banners",
      "fields": [
        {
          "field_id": "banners",
          "label": "Banners",
          "type": "images",
          "min": 1,
          "defaultValue": ["images/banner.jpg"]
        }
      ]
    },
    {
      "field_group_id": "sounds",
      "legend": "Sounds",
      "fields": [
        {
          "field_id": "countdown_sound",
          "label":  "Payment Countdown Sound",
          "type": "sound",
          "required": true,
          "defaultValue": {
            "src": "sounds/count-down-beep.mp3",
            "format": "audio/mpeg",
            "loop": true,
            "loop_delay": 1000
          }
        },
        {
          "field_id": "countdown_bg_sound",
          "label":  "Countdown Background Sound",
          "type": "sound",
          "required": false,
          "defaultValue": null
        },

        {
          "field_id": "connected_sound",
          "label": "Connected Sound",
          "type": "sound",
          "required": true,
          "defaultValue": {
            "src": "sounds/connected.mp3",
            "format": "audio/mpeg"
          }
        },
        {
          "field_id": "disconnected_sound",
          "label": "Disconnected Sound",
          "type": "sound",
          "required": true,
          "defaultValue": {
            "src": "sounds/disconnected.mp3",
            "format": "audio/mpeg"
          }
        },
        {
          "field_id": "coin_inserted",
          "label":  "Coin Inserted Sound",
          "type": "sound",
          "required": true,
          "defaultValue": {
            "src": "sounds/coin-inserted.mp3",
            "format": "audio/mpeg"
          }
        },
        {
          "field_id": "error_sound",
          "label":  "Error Sound",
          "type": "sound",
          "required": true,
          "defaultValue": {
            "src": "sounds/error.mp3",
            "format": "audio/mpeg"
          }
        }
      ]
    },
    {
      "field_group_id": "css",
      "legend": "Stylesheets",
      "fields": [
        {
          "field_id": "css_files",
          "label": "CSS Files",
          "type": "stylesheets",
          "defaultValue": [
            "fonts/fonts.css",
            "styles/bootstrap.min.css",
            "styles/ie10-viewport-bug-workaround.css",
            "styles/sticky-footer-navbar.css",
            "styles/ellipsis.css",
            "styles/portal.css"
          ]
        }
      ]
    },
    {
      "field_group_id": "other",
      "legend": "Uploads",
      "fields": [
        {
          "field_id": "upload_files",
          "label": "Upload Your Files",
          "type": "files",
          "defaultValue": []
        }
      ]
    }
  ]
}

